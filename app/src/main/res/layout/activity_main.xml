<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Content Here"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#f20"
         />

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#58E80B"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/layout1"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_marginRight="20dp"
            android:background="#162293"
            />

        <TextView
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Third"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/layout2"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#A87F05"

            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Content Here"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#AAA6A5"
        />




</RelativeLayout>